<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.burgerswipe.BurgerActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/favoriteContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/bunBottom"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/bun_bottom"
            app:layout_constraintLeft_toLeftOf="@id/cheese"
            app:layout_constraintRight_toRightOf="@id/cheese"
            app:layout_constraintTop_toBottomOf="@id/tomatoes" />

        <ImageView
            android:id="@+id/tomatoes"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/tomatoes"
            app:layout_constraintLeft_toLeftOf="@id/cheese"
            app:layout_constraintRight_toRightOf="@id/cheese"
            app:layout_constraintTop_toBottomOf="@id/meat2" />

        <ImageView
            android:id="@+id/meat2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/burger"
            app:layout_constraintLeft_toLeftOf="@id/cheese"
            app:layout_constraintRight_toRightOf="@id/cheese"
            app:layout_constraintTop_toBottomOf="@id/cheese" />

        <ImageView
            android:id="@+id/cheese"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/cheese"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/meat1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/burger"
            app:layout_constraintBottom_toTopOf="@id/cheese"
            app:layout_constraintLeft_toLeftOf="@id/cheese"
            app:layout_constraintRight_toRightOf="@id/cheese" />

        <ImageView
            android:id="@+id/bunTop"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/bun_top"
            app:layout_constraintBottom_toTopOf="@id/meat1"
            app:layout_constraintLeft_toLeftOf="@id/cheese"
            app:layout_constraintRight_toRightOf="@id/cheese" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>